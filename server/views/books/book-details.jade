extends ../index

block main-content
    .container
        h2 #{book.title}
        .pull-right(ng-show="identity.currentUser.isAdmin()")
            a.btn.btn-danger(href="#/books/edit/{{ book._id }}") Edit book
        h3 #{book.author}
        img(ng-src="#{book.imageUrl}")
        p Description: &nbsp  #{book.description}
        each tag in book.tags
            ul
                li=tag
        p #{book.published}
        each review in book.reviews
            ul Reviews
                li #{review.content}
                li(ng-show="identity.isAuthenticated()")
                    a(href="#/books/#{book._id}/review") Add review
