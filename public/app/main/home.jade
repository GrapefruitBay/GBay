.container
    .jumbotron.text-center
        h1 Grapefruit Bay Bookstore
        h2 The creativity bay
    nav.navbar.navbar-default
        .container-fluid
            .navbar-header
                button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#bs-example-navbar-collapse-1")
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href="#") Brand
            #bs-example-navbar-collapse-1.collapse.navbar-collapse
                ul.nav.navbar-nav
                    li
                        a(href="#/books")
                            | Books
                            span.sr-only (current)
                    li
                        a(href="#/games") Games
                    li
                        a(href="#/movies") DVD & Blu-ray
                    li.dropdown
                        a.dropdown-toggle(data-toggle="dropdown", role="button", aria-expanded="false")
                            | Stationary
                            span.caret
                        ul.dropdown-menu(role="menu")
                            li
                                a(href="#") Office supplies
                            li.divider
                            li
                                a(href="#") School stationary
                            li.divider
                            li
                                a(href="#") Files & Folders
                            li.divider
                            li
                                a(href="#") Drawing & art set
                            li.divider
                            li
                                a(href="#") Separated link

    .row
        .col-md-6
            .panel.panel-primary
                .panel-heading.text-center New Books
                .panel-body(ng-include="'/partials/main/new-books'")
        .col-md-6
            .panel.panel-primary
                .panel-heading.text-center Games
                .panel-body(ng-include="'/partials/main/games'")
    .row
        .col-md-6
            .panel.panel-primary
                .panel-heading.text-center New DVD's & Blu-ray's
                .panel-body(ng-include="'/partials/main/new-movies'")
        .col-md-6
            .panel.panel-primary
                .panel-heading.text-center Stationaries
                .panel-body(ng-include="'/partials/main/stationaries'")
