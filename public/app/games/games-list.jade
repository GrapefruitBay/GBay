.container
    .row
        .col-md-2 Search
        .col-md-4
            input.form-control(type="text", placeholder="Search", ng-model="search")
        .col-md-2 Sort
        .col-md-4
            select.form-control(ng-model="sort")
                option(value=" " ng-selected="'true'") Default
                option(value="title") Title
                option(value="published") Published
    br
    .k-grid.k-widget(kendo-grid='', data-role='grid')
        .k-grid-header(style='padding-right: 17px;')
            .k-grid-header-wrap.k-auto-scrollable
                table(role='grid')
                    colgroup
                        col.k-hierarchy-col
                        col(style='width:200px')
                        col(style='width:200px')
                        col(style='width:200px')
                        col(style='width:200px')
                        col(style='width:200px')
                    thead(role='rowgroup')
                        tr(role='row')
                            th.k-hierarchy-cell.k-header.ng-scope Â 
                            th#f5a4c5ab-5f49-4b4b-bbbf-0f573241b0c7.k-header.ng-scope(role='columnheader', data-field='Title', rowspan='1', data-title='Title', data-index='0', data-role='columnsorter')
                                a.k-link Title
                            th#1ae18cfe-c9e9-4f8c-948b-872f918c0680.k-header.ng-scope(role='columnheader', data-field='Manufacturer', rowspan='1', data-title='Manufacturer', data-index='1', data-role='columnsorter')
                                a.k-link Manufacturer
                            th#d41285cc-b7db-4f91-a77c-a0c05c3e4949.k-header.ng-scope(role='columnheader', data-field='Price', rowspan='1', data-index='2', data-role='columnsorter')
                                a.k-link Price
                            th#eb52ae9c-5e54-4128-bc15-d90b5166f918.k-header.ng-scope(role='columnheader', data-field='Quantity', rowspan='1', data-index='3', data-role='columnsorter')
                                a.k-link Quantity
                            th#123af160-8f83-4000-8d64-a8ba1cfd15ba.k-header.ng-scope(role='columnheader', data-field='Image', rowspan='1', data-index='4', data-role='columnsorter')
                                span Image
        .k-grid-content.k-auto-scrollable
            table(role='treegrid')
                colgroup
                    col.k-hierarchy-col
                    col(style='width:200px')
                    col(style='width:200px')
                    col(style='width:200px')
                    col(style='width:200px')
                    col(style='width:200px')
                tbody(role='rowgroup')
                    tr.k-master-row.ng-scope(data-uid='c74522dc-0076-4c18-ba56-80b2de559575', ng-repeat="game in games" role='row')
                        td.k-hierarchy-cell
                            a.k-icon.k-plus(href='#/games/{{ game._id }}', tabindex='-1')
                        td(role='gridcell')
                            span {{game.title}}
                        td(role='gridcell')
                            span {{game.manufacturer}}
                        td(role='gridcell')
                            span {{game.price}}
                        td(role='gridcell')
                            span {{game.quantity}}
                        td(role='gridcell')
                            img(src="{{game.imageUrl}}", width="120")
        .k-pager-wrap.k-grid-pager.k-widget.k-floatwrap(data-role='pager')
            a.k-link.k-pager-nav.k-pager-first.k-state-disabled(href='#', title='Go to the first page', data-page='1', tabindex='-1')
                span.k-icon.k-i-seek-w Go to the first page
            a.k-link.k-pager-nav.k-state-disabled(href='#', title='Go to the previous page', data-page='1', tabindex='-1')
                span.k-icon.k-i-arrow-w Go to the previous page
            ul.k-pager-numbers.k-reset
                li.k-current-page
                    span.k-link.k-pager-nav 1
                li
                    span.k-state-selected 1
                li
                    a.k-link(tabindex='-1', href='#', data-page='2') 2
            a.k-link.k-pager-nav(href='#', title='Go to the next page', data-page='2', tabindex='-1')
                span.k-icon.k-i-arrow-e Go to the next page
            a.k-link.k-pager-nav.k-pager-last(href='#', title='Go to the last page', data-page='2', tabindex='-1')
                span.k-icon.k-i-seek-e Go to the last page
            span.k-pager-info.k-label 1 - 5 of 9 items
